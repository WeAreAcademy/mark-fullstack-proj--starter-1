{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2020",
        "lib": ["es2020"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist"
    },
    "include": ["src/**/*"]
}
